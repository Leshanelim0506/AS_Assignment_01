@model AS_Assignment_01.Models.ForgotPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Recover Account";
}

<div class="row g-0 align-items-stretch shadow-lg rounded-4 overflow-hidden mt-5 mx-auto" style="max-width: 1000px; min-height: 600px;">
    <div class="col-lg-6 bg-primary d-none d-lg-flex align-items-center justify-content-center p-5 position-relative">
        <div class="text-center z-1">
            <div class="bg-white bg-opacity-10 rounded-circle d-inline-flex p-4 mb-4">
                <i class="bi bi-shield-lock text-white" style="font-size: 5rem;"></i>
            </div>
            <h2 class="text-white fw-black display-6">Security First.</h2>
            <p class="text-white text-opacity-75">We use encrypted tokens to ensure your password reset process remains completely private.</p>
        </div>
        <div class="bubble b-1"></div>
        <div class="bubble b-2"></div>
    </div>

    <div class="col-lg-6 bg-white p-5 d-flex align-items-center">
        <div class="w-100">
            <div class="text-center mb-5">
                <img src="~/images/AceJobAgency_Logo.png" alt="Ace Job Agency" class="mb-4" style="height: 45px;" />
                <h3 class="fw-bold text-dark">Password Recovery</h3>
                <p class="text-muted small">Enter your email address to receive a secure recovery link.</p>
            </div>

            <form asp-action="ForgotPassword" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-4">
                    <label class="form-label small fw-bold text-muted text-uppercase ls-1">Email Address</label>
                    <div class="input-group shadow-sm border rounded-3 overflow-hidden">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-envelope-at text-primary"></i></span>
                        <input asp-for="Email" class="form-control border-0 py-2" placeholder="name@agency.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger extra-small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold py-3 rounded-pill shadow hover-lift mb-4">
                    SEND RECOVERY LINK
                </button>
            </form>

            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none small fw-bold text-primary">
                    <i class="bi bi-arrow-left me-1"></i> Return to Login
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .ls-1 {
        letter-spacing: 1px;
    }

    .fw-black {
        font-weight: 900;
    }

    .extra-small {
        font-size: 0.7rem;
    }

    .hover-lift:hover {
        transform: translateY(-2px);
        transition: 0.2s;
    }

    .bubble {
        position: absolute;
        background: rgba(255,255,255,0.1);
        border-radius: 50%;
    }

    .b-1 {
        width: 100px;
        height: 100px;
        top: 10%;
        left: 10%;
    }

    .b-2 {
        width: 60px;
        height: 60px;
        bottom: 15%;
        right: 15%;
    }
</style>