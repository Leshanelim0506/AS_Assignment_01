@model AS_Assignment_01.Models.ResetPasswordViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Define New Password";
}

<div class="row g-0 align-items-stretch shadow-lg rounded-4 overflow-hidden mt-5 mx-auto" style="max-width: 1000px; min-height: 600px;">
    <div class="col-lg-6 bg-primary d-none d-lg-flex align-items-center justify-content-center p-5 position-relative text-center">
        <div class="z-1 text-white">
            <div class="bg-white bg-opacity-10 rounded-circle d-inline-flex p-4 mb-4">
                <i class="bi bi-shield-lock-fill" style="font-size: 5rem;"></i>
            </div>
            <h2 class="fw-black display-6">Secure Reset</h2>
            <p class="text-white text-opacity-75">Your identity has been verified via email. You can now establish a new, secure access credential.</p>

            <div class="mt-4 p-3 rounded-3 bg-white bg-opacity-10 border border-white border-opacity-25 text-start mx-auto" style="max-width: 320px;">
                <small class="fw-bold d-block mb-1 text-uppercase ls-1">Security Reminder:</small>
                <ul class="extra-small mb-0 opacity-75 list-unstyled">
                    <li><i class="bi bi-check2-circle me-1"></i> Cannot be a previous password</li>
                    <li><i class="bi bi-check2-circle me-1"></i> Minimum 12 characters required</li>
                </ul>
            </div>
        </div>
        <div class="bubble b-1"></div>
        <div class="bubble b-2"></div>
    </div>

    <div class="col-lg-6 bg-white p-5 d-flex align-items-center">
        <div class="w-100">
            <div class="mb-5">
                <h3 class="fw-bold text-dark">Define Credentials</h3>
                <p class="text-muted small">Update your account with a new strong password.</p>
            </div>

            <form asp-action="ResetPassword" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />

                <div class="mb-4">
                    <label class="form-label small fw-bold text-muted ls-1">NEW PASSWORD</label>
                    <div class="input-group custom-input-group shadow-sm">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-key text-primary"></i></span>
                        <input asp-for="NewPassword" type="password" id="resetPass" class="form-control border-0 py-2" placeholder="••••••••" />
                        <button class="btn btn-light border-0" type="button" onclick="togglePass('resetPass', 'eye1')">
                            <i class="bi bi-eye-slash" id="eye1"></i>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger extra-small"></span>
                </div>

                <div class="mb-5">
                    <label class="form-label small fw-bold text-muted ls-1">CONFIRM PASSWORD</label>
                    <div class="input-group custom-input-group shadow-sm">
                        <span class="input-group-text bg-light border-0"><i class="bi bi-shield-check text-primary"></i></span>
                        <input asp-for="ConfirmPassword" type="password" id="confirmPass" class="form-control border-0 py-2" placeholder="••••••••" />
                        <button class="btn btn-light border-0" type="button" onclick="togglePass('confirmPass', 'eye2')">
                            <i class="bi bi-eye-slash" id="eye2"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger extra-small"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-bold py-3 rounded-pill shadow hover-lift">
                    RESET CREDENTIALS
                </button>
            </form>
        </div>
    </div>
</div>