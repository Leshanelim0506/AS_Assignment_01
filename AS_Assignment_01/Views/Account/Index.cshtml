@model AS_Assignment_01.Models.ApplicationUser
@{
    Layout = "_Layout";
    ViewData["Title"] = "Executive Dashboard";
}

<div class="container-fluid py-5 px-lg-5">
    <div class="row g-4">
        <div class="col-xl-3 col-lg-4">
            <div class="card border-0 shadow-custom rounded-4 overflow-hidden h-100">
                <div class="bg-primary p-4 text-center">
                    <div class="position-relative d-inline-block">
                        <div class="bg-white rounded-circle p-1 shadow">
                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                                <i class="bi bi-person-fill text-primary" style="font-size: 3.5rem;"></i>
                            </div>
                        </div>
                        <span class="position-absolute bottom-0 end-0 bg-success border border-2 border-white rounded-circle p-2" title="Online"></span>
                    </div>
                    <h4 class="fw-bold text-white mt-3 mb-0">@Model.FirstName @Model.LastName</h4>
                    <p class="text-white text-opacity-75 small">Premium Member</p>
                </div>

                <div class="card-body p-4">
                    <div class="mb-4">
                        <label class="small fw-bold text-muted text-uppercase ls-1 mb-2 d-block">Account Status</label>
                        <div class="d-flex align-items-center bg-light p-3 rounded-3 border">
                            <i class="bi bi-shield-fill-check text-success fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold text-dark small">Fully Verified</div>
                                <div class="text-muted extra-small">2FA Active</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="small fw-bold text-muted text-uppercase ls-1 mb-2 d-block">Security Health</label>
                        <div class="progress mb-2" style="height: 6px;">
                            <div class="progress-bar bg-primary" style="width: 100%"></div>
                        </div>
                        <div class="d-flex justify-content-between extra-small text-muted">
                            <span>Last Password Reset</span>
                            <span class="fw-bold">@(Model.LastPasswordChangedDate?.ToString("dd MMM yyyy") ?? "Never")</span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 pt-3 border-top">
                        <a asp-action="ChangePassword" class="btn btn-primary fw-bold py-2 rounded-3">
                            <i class="bi bi-key-fill me-2"></i>Update Security
                        </a>
                        <form asp-action="Logout" asp-controller="Account" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm fw-bold py-2 rounded-3 w-100">
                                <i class="bi bi-power me-2"></i>Secure Sign Out
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-9 col-lg-8">
            <div class="card border-0 shadow-custom rounded-4 h-80">
                <div class="card-header bg-white border-0 p-4 pt-5">
                    <div class="d-flex justify-content-between align-items-end">
                        <div>
                            <h3 class="fw-bold text-white mb-1">Professional Profile</h3>
                            <p class="text-white text-opacity-75 mb-0">Manage your agency identity and encrypted credentials.</p>
                        </div>
                        <div class="text-end d-none d-md-block">
                            <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                <i class="bi bi-clock-history me-2"></i>Session Active
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="mb-5">
                        <div class="vault-container p-4 rounded-4 border-dashed position-relative overflow-hidden">
                            <div class="vault-bg-icon"><i class="bi bi-safe2"></i></div>
                            <div class="row align-items-center position-relative z-1">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="bg-primary rounded-circle p-2 me-3 shadow-sm">
                                            <i class="bi bi-fingerprint text-white fs-5"></i>
                                        </div>
                                        <h5 class="fw-bold text-dark mb-0">Secure Identity Identifier (NRIC)</h5>
                                    </div>
                                    <p class="text-muted small mb-3">This sensitive field is stored using AES-256 encryption in our database and decrypted only for your view.</p>
                                    <div class="d-flex align-items-center">
                                        <div class="h2 fw-black text-primary mb-0 me-3 ls-lg">@ViewBag.DecryptedNRIC</div>
                                        <i class="bi bi-patch-check-fill text-primary" title="Verified"></i>
                                    </div>
                                </div>
                                <div class="col-md-4 text-md-end mt-4 mt-md-0">
                                    <div class="badge bg-white text-primary border shadow-sm p-3 rounded-4">
                                        <i class="bi bi-shield-lock-fill d-block mb-1 fs-4"></i>
                                        <span class="extra-small uppercase ls-1">End-to-End Encrypted</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-5">
                        <div class="col-md-6">
                            <h6 class="fw-bold text-dark text-uppercase ls-1 mb-4 border-bottom pb-2">Account Details</h6>
                            <div class="mb-3 d-flex align-items-center">
                                <div class="bg-light rounded p-2 me-3"><i class="bi bi-envelope-at text-muted"></i></div>
                                <div>
                                    <div class="extra-small text-muted fw-bold text-uppercase ls-1">Primary Email</div>
                                    <div class="fw-bold">@Model.Email</div>
                                </div>
                            </div>
                            <div class="mb-3 d-flex align-items-center">
                                <div class="bg-light rounded p-2 me-3"><i class="bi bi-gender-ambiguous text-muted"></i></div>
                                <div>
                                    <div class="extra-small text-muted fw-bold text-uppercase ls-1">Gender</div>
                                    <div class="fw-bold">@Model.Gender</div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <div class="bg-light rounded p-2 me-3"><i class="bi bi-calendar-event text-muted"></i></div>
                                <div>
                                    <div class="extra-small text-muted fw-bold text-uppercase ls-1">Date of Birth</div>
                                    <div class="fw-bold">@Model.DateOfBirth.ToString("MMMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 d-flex flex-column">
                            <h6 class="fw-bold text-dark text-uppercase ls-1 mb-4 border-bottom pb-2">Professional Summary</h6>
                            <div class="p-4 bg-light rounded-4 border border-info border-opacity-10 h-100">
                                <i class="bi bi-quote text-primary opacity-25 fs-1 d-block mb-n3"></i>
                                <p class="text-muted italic mb-0">@Model.WhoAmI</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Fix for Card Header Text Color */
    .card-header h3, .card-header p {
        color: var(--ace-dark) !important; /* Changed from text-white to dark for readability */
    }

    /* Ensure equal heights for the bottom details rows */
    .row.g-5 {
        display: flex;
        align-items: stretch;
    }

    /* Specific fix for the quote positioning */
    .bi-quote {
        line-height: 1;
    }

    /* Ensure the dashboard columns don't collapse unevenly */
    .h-80 {
        min-height: 80%;
    }
    .ls-lg {
        letter-spacing: 4px;
    }

    .extra-small {
        font-size: 0.65rem;
    }

    .fw-black {
        font-weight: 900;
    }

    .border-dashed {
        border: 2px dashed #dee2e6;
        background-color: #f8fbff;
    }

    .vault-container {
        transition: all 0.3s ease;
    }

        .vault-container:hover {
            border-color: var(--ace-primary);
            background-color: #f0f7ff;
        }

    .vault-bg-icon {
        position: absolute;
        right: -20px;
        bottom: -20px;
        font-size: 8rem;
        color: rgba(37, 99, 235, 0.05);
        transform: rotate(-15deg);
        z-index: 0;
    }

    .italic {
        font-style: italic;
    }
</style>